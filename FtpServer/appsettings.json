{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Level:u3}] {Timestamp:yyyy-MM-dd HH:mm:ss} {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": {
      "Service": "BusinessMobileApi",
      "Project": "Mobile",
      "Environment": "Dev"
    }
  },

  "AllowedHosts": "*"
}
